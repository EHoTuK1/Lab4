<Window x:Class="Lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="Математический квест" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Математический квест" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" />
        <DockPanel Grid.Row="1" HorizontalAlignment="Center" Margin="10" Height="30" VerticalAlignment="Center">
            <TextBlock Text="Введите количество вопросов:" VerticalAlignment="Center"/>
            <Separator Opacity="0" Width="10"/>
            <TextBox x:Name="QuestionCountTB" Width="100" VerticalAlignment="Center">
                
            </TextBox>
        </DockPanel>
        <Button Grid.Row="2" Content="Начать тест" Width="200" Height="50"/>
    </Grid>
</Window>
